{
  "compileOnSave": true,
  "compilerOptions": {
      "outDir": "./build/dist/",
      "rootDir": "./frontend/",
      "lib": ["dom", "dom.iterable", "esnext"], 
      "allowJs": true,
      "target": "ESNext",
      "alwaysStrict": false,
      "strict": false,
      "strictNullChecks": true,
      "removeComments": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react"
  },
  "include": [
      "frontend/**"
  ],
  "exclude": [
      "backend",
      "tests",
      "dist",
      "node_modules",
      "**/*.spec.js",
      "**/*.spec.ts",
      "**/*.test.ts",
      "**/*.test.ts"
  ]
} 